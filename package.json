{
  "name": "daily-baker",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "docker start daily-baker-local-postgres 2>/dev/null || docker compose -f docker-compose.local.yml up -d && npm run db:wait && next dev",
    "db:wait": "until docker exec daily-baker-local-postgres pg_isready -U daily_baker_user -d daily_baker > /dev/null 2>&1; do sleep 1; done",
    "dev:lint": "next dev --experimental-lint-on-change",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.934.0",
    "@aws-sdk/client-ses": "^3.934.0",
    "@aws-sdk/s3-request-presigner": "^3.934.0",
    "@clerk/nextjs": "^6.35.2",
    "@mdxeditor/editor": "^3.49.3",
    "@prisma/client": "^6.19.0",
    "@sentry/nextjs": "^10.25.0",
    "@tanstack/react-query": "^5.90.10",
    "convert-units": "^2.3.4",
    "daisyui": "^5.5.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.554.0",
    "markdown-to-jsx": "^9.3.0",
    "next": "16.0.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/convert-units": "^2.3.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "baseline-browser-mapping": "^2.9.17",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "lightningcss": "^1.30.2",
    "prisma": "^6.19.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
